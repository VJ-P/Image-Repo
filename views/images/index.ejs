<% layout('/layouts/boilerplate') %>

<div class="wrapper">
    <h1>Images</h1>
    <div class="img-area">
        <% for (let image of images) { %>

        <div class="modal fade" id="modal-<%= image._id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"><%= image.title %></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <%= image.description %>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-danger">Delete Image</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="single-img">
            <img src="<%= image.url %>" width="600" height="500" alt="<%= image.title %>" data-bs-toggle="modal" data-bs-target="#modal-<%= image._id %>">
        </div>
        
        <% }; %>
    </div>
</div>